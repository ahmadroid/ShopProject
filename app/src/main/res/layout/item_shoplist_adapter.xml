<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_item_shop_adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/ic_dialog_alert"
                android:scaleType="fitXY" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#f2060a"
                android:textSize="20sp"
                android:id="@+id/txt_item_shop_adapter"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/flt_info_item_shop_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:fabSize="mini"
                app:backgroundTint="#fff"
                app:srcCompat="@drawable/ic_info_large_green" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>